# SIMS Environment Configuration for Coolify/Traefik Deployment
# Copy these variables to your Coolify environment settings
# DO NOT commit actual values to version control

# =============================================================================
# REQUIRED: Core Django Settings
# =============================================================================

# SECURITY: Generate a strong secret key (min 50 characters)
# You can generate one with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=change-this-to-a-strong-random-secret-key-min-50-chars

# SECURITY: Never enable DEBUG in production
DEBUG=False

# REQUIRED: Comma-separated list of allowed hostnames
# Include your domain name and any subdomains
# Example: myapp.example.com,www.myapp.example.com
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# =============================================================================
# REQUIRED: Database Configuration
# =============================================================================

# PostgreSQL password (REQUIRED - must be strong)
DB_PASSWORD=change-this-to-a-strong-database-password

# PostgreSQL configuration (optional - defaults shown)
DB_NAME=sims_db
DB_USER=sims_user

# =============================================================================
# Reverse Proxy Settings (for Traefik/Coolify)
# =============================================================================

# Enable reverse proxy header detection (REQUIRED for Traefik/Coolify)
# Only set to False if NOT using a reverse proxy
USE_PROXY_HEADERS=True

# SSL redirect - Keep False if Traefik handles HTTP->HTTPS redirect (recommended)
# Set to True if you want Django to handle redirects instead
SECURE_SSL_REDIRECT=False

# Cookie security - Set to True in production behind HTTPS
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# CSRF Trusted Origins - Add your domain(s)
# Format: https://yourdomain.com,https://api.yourdomain.com
CSRF_TRUSTED_ORIGINS=https://yourdomain.com

# =============================================================================
# Optional: Email Configuration
# =============================================================================

EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-app-password
DEFAULT_FROM_EMAIL=SIMS <noreply@yourdomain.com>

# =============================================================================
# Optional: CORS Configuration (if using separate frontend)
# =============================================================================

CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# =============================================================================
# Optional: Feature Flags
# =============================================================================

FEATURE_ADVANCED_ANALYTICS=True
FEATURE_EMAIL_NOTIFICATIONS=True
FEATURE_BULK_OPERATIONS=True
FEATURE_PDF_REPORTS=True

# =============================================================================
# Optional: Security Headers (recommended for production)
# =============================================================================

# HSTS Settings (recommended after SSL is working correctly)
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=False

# =============================================================================
# COOLIFY DEPLOYMENT SETTINGS
# =============================================================================
# In Coolify UI:
# - Build Method: Dockerfile
# - Port: 8000
# - Health Check Path: /healthz/
# - Domain: yourdomain.com (configure in Coolify)
# - SSL: Enable Let's Encrypt in Coolify
# - Compose File: docker-compose.coolify.yml (if using compose deployment)
# =============================================================================
